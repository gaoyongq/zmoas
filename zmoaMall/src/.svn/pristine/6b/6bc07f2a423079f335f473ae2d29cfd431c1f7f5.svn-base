    <link type="text/css" rel="stylesheet" href="../../js/jquery_treeview/jquery.treeview.css" />
    <style type="text/css">
        body,table, #activity
        {
            text-align: center;
        }
        .top_01 td
        {
            height: 100px;
            width: 150px;
        }
    </style>

    <script type="text/javascript">
        $(function(){

            var currentPage = "1";
            selData();
##            $!date.format('yyyy-MM-dd HH:mm:ss ',$!user.time)
            function selData() {
                jQuery.post("/system/registerpage.action", {"currentPage": currentPage}, function (data) {
                    var resultData = "";
                    for (var j = 0; j < data.registers.length; j++) {
                        resultData += "<tr><td>" + data.registers[j].userid + "</td>";
                        resultData += "<td>" + data.registers[j].username + "</td>";
                        resultData += "<td>" + data.registers[j].createtimepage + "</td>";
                        resultData += "<td>" + data.registers[j].updatetimepage + "</td>";
                        resultData += "<td>" + data.registers[j].mstatus + "</td>";
                        resultData += "<td>" + data.registers[j].estatus + "</td><tr>";
                    }

                    $("#mytbody").html(resultData);
                    currentPage = data.currentPage;
                    $("#page").html("" + currentPage + " / " + data.totalPages + "");

                });
            }
        //上一页
        $("#upPage").click(function(){
            currentPage = currentPage-1;
            if (currentPage < 0) {
                currentPage=1;
                selData();
                alert("当前第一页")
            } else {
                selData();
            }
        });
        //下一页
        $("#downPage").click(function () {
            currentPage=currentPage+1;
            selData();
        });
     });
    </script>


</head>
<body>
<div id="content">
    <table border="1">
    <thead>
    <tr align="CENTER" valign="MIDDLE" id="TableTitle">
        <td width="100">
            编号
        </td>
        <td width="100">
            姓名
        </td>
        <td width="100">
            上班时间
        </td>
        <td width="100">
            下班时间
        </td>
        <td width="100">
            上班状态
        </td>
        <td width="100">
            下班状态
        </td>
    </tr>
    </thead>
    <tbody id="mytbody">

    </tbody>

    <tr><td colspan="7" align="right"><input type="button" name="btn" id="btn" value="查询"><font id="page"></font> &nbsp;&nbsp;<a href="#" id="upPage">上一页</a>&nbsp;&nbsp;<a href="#" id="downPage">下一页</a></td></tr>

    </table>
</div>
</body>
</html>
