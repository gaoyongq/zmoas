                    return false;
                }*/


                window.location.href="/business/distributionConsent.action?distributionCode="+distributionCode/*+"&approvePeople="+approvePeople*/;
            }
            function noConsent(){

                var distributionCode="";
                jQuery("input[name=purchaseCheck]").each(function() {

                    if ($(this).prop("checked")) {
                        distributionCode += $(this).val()+",";

                    }
                });
                if(distributionCode==""){
