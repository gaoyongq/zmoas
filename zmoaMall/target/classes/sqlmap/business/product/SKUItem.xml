<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zm.mall.dao.business.product.SKUItemDao">
        <resultMap id="SKUItemDaoMap" type="com.zm.mall.domain.business.product.SKUItem">
            <result column="SpecId" property="specId" jdbcType="BIGINT"></result>
            <result column="AttributeId" property="attributeId" jdbcType="BIGINT"></result>
            <result column="ValueId" property="valueId" jdbcType="BIGINT"></result>
            <result column="ImageUrl" property="imageUrl" jdbcType="VARCHAR"></result>
            <result column="ValueStr" property="valueStr" jdbcType="VARCHAR"></result>
            <result column="ProductId" property="productId" jdbcType="BIGINT"></result>
            <result property="pluteformid" column="pluteformid" jdbcType="VARCHAR"/>
            <result property="shopId" column="shopId" jdbcType="BIGINT"/>
        </resultMap>

    <!--判断平台Id-->
    <sql id="b2c_condition">
        <choose>
            <when test="shopId != null">and shopId = #{shopId}</when>
            <otherwise>and shopId is null</otherwise>
        </choose>
        <if test="pluteformid !=null  and  pluteformid  !='' ">
            AND pluteformid=#{pluteformid}
        </if>
    </sql>

        <insert id="insertSKUItem" parameterType="skuItem">
            insert INTO b2c_shop_skuitems(attributeid,valueid,productid,shopId,pluteformid)
            VALUES (#{attributeId},#{valueId},#{productId},#{shopId},#{pluteformid})
        </insert>
    <select id="selSKUItem" resultType="skuItem" parameterType="skuItem">
        SELECT *
        FROM b2c_shop_skuitems
        WHERE attributeid = #{attributeId} AND  valueid = #{valueId} AND productid = #{productId}
        <include refid="b2c_condition"/>
    </select>
    <delete id="delSKUItem" parameterType="productInfo">
        DELETE from b2c_shop_skuitems WHERE productid = #{productId}
        <include refid="b2c_condition"/>
    </delete>
    <!--根据规格差属性-->
    <select id="selSkuItemById" resultMap="SKUItemDaoMap" parameterType="skuInfo">
        SELECT * from b2c_shop_skuitems i where i.SpecId IN (SELECT SpecId s from b2c_shop_skurelation s where s.SkuId =#{skuId})
        <include refid="b2c_condition"/>
    </select>
</mapper>