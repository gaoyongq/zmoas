<script>
    $(".icon-check").click(function(){
        var rankLevel=$(".rankLevel").val().trim();
        var name=$(".name").val().trim();
        var scoreMin=$(".scoreMin").val().trim();
        var scoreMax=$(".scoreMax").val().trim();
        var description=$(".description").val().trim();
        var re= /^[0-9]$|^[1][0-9]$|^[2][0]$/;
        if(rankLevel==""||name==""||scoreMin==""||scoreMax==""||description==""){
            $(".show_2").text("");
            $(".show_1").text("请将信息补充完整!!");
            return false;
        }else if(!re.test(rankLevel)){
            $(".show_1").text("");
            $(".show_2").text("输入0-20等级正确的格式!!!");
            return false;
        }else
        {
            return true;
        }

    });
    $(".button_01").click(function(){
        var name=$("#name_01").val();
        window.location.href="/business/UserLevel.action?name="+name;
    })
</script>