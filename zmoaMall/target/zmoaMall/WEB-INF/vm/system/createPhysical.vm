#set($layout = "layout/empty.vm")
<html>
<head>
    <!-- 导入jquery核心类库 -->
    <script type="text/javascript"
            src="../../js/jquery-1.8.3.js"></script>
    <!-- 导入easyui类库 -->
    <link id="easyuiTheme" rel="stylesheet" type="text/css"
          href="../../js/easyui/themes/default/easyui.css">
    <link rel="stylesheet" type="text/css"
          href="../../js/easyui/themes/icon.css">
    <link rel="stylesheet" type="text/css"
          href="../../css/default.css">
    <script type="text/javascript"
            src="../../js/easyui/jquery.easyui.min.js"></script>
    <!-- 导入ztree类库 -->
    <link rel="stylesheet"
          href="../../js/ztree/zTreeStyle.css"
          type="text/css" />
    <link rel="stylesheet"
          href="../../css/sys.css"
          type="text/css" />

    <script
            src="../../js/easyui/locale/easyui-lang-zh_CN.js"
            type="text/javascript"></script>


</head>
<body>
    <div>

        #*   <a id="save"><font color='#000000'>保存</font></a>*#
            <input id="save" type="submit" value="保存">

    </div>
    <form action="/business/physicalList.action" method="post" name="form1">
        <table align="center"  width="100%">
            <tr>

                <td align="center">
                    <h1>采购单</h1>
                </td>
                <td align="center">
                    <h1>车辆管理</h1>
                </td>
                <td align="center">
                    <h1>人员管理</h1>
                </td>

            </tr>
            <tr>
                <td align="center">
                    <table class="tabtd3" align="center"  border="1">
                        <tr style="width: 100px">

                            <td></td>
                            <td>采购单编号</td>
                            <td>采购单总重量</td>

                        </tr>

                        #foreach($PurchaseInfo in $PIlist)
                            <tr>
                                <th>
                                    <input type="checkbox" class="purchaseInfoCheck" value="$PurchaseInfo.purchaseId" name="purchaseInfoCheck">
                                </th>
                                <td>$!PurchaseInfo.purchaseCode</td>
                                <td>$!PurchaseInfo.totalweight</td>

                            </tr>

                        #end

                    </table>
                </td>
                <td align="center">
                    <table class="tabtd3" align="center"  border="1">
                        <tr style="width: 100px">

                            <td></td>
                            <td>车牌号</td>
                            <td>车载重</td>

                        </tr>

                        #foreach($TruckManage in $TMList)
                            <tr>
                                <th>
                                    <input type="checkbox" id="check" value="$TruckManage.id" name="truckManageCheck">
                                </th>
                                <td>$!TruckManage.number</td>
                                <td>$!TruckManage.capacity</td>

                            </tr>

                        #end

                    </table>

                </td>
                <td align="center">
                    <table class="tabtd3" align="center"  border="1">
                        <tr style="width: 100px">

                            <td></td>
                            <td>司机姓名</td>
                            <td>司机联系方式</td>

                        </tr>

                        #foreach($User in $UList)
                            <tr>
                                <th>
                                    <input type="checkbox" id="check" value="$User.id" name="userCheck">
                                </th>
                                <td>$!User.name</td>
                                <td>$!User.phone</td>

                            </tr>

                        #end

                    </table>
                </td>

            </tr>
        </table>
    </form>
</body>

</html>
<script>

    jQuery("#save").click(function(){

        var purchaseInfoId="";
        var truckManageId="";
        var userCheckId="";
        jQuery("input[name=purchaseInfoCheck]").each(function() {
            if ($(this).prop("checked")) {
                purchaseInfoId += $(this).val()+",";
            }
        });

        if(purchaseInfoId!=""){
            var size=purchaseInfoId.split(",").length;
           if(size>2){
               alert("请选择一个采购单")
               return false;
           }
        }
        if(purchaseInfoId==""){
            alert("请选择采购单!!!")
            return false;
        }


        jQuery("input[name=truckManageCheck]").each(function() {
            if ($(this).prop("checked")) {
                   truckManageId += $(this).val()+",";
            }
        });
        if(truckManageId==""){
            alert("请选择车辆!!!")
            return false;
        }
        $("input[name=userCheck]").each(function() {
            if ($(this).prop("checked")) {
                userCheckId += $(this).val()+",";
            }
        });
        if(userCheckId==""){
            alert("请选择司机!!!")
            return false;
        }
        window.location.href="/business/physicalList.action?purchaseInfoId="+purchaseInfoId+"&truckManageId="+truckManageId+"&userCheckId="+userCheckId;
    });


</script>






