                    }
                    $('#car').html(tbHtml);//显示HTML
                 })

            });
            function tijiao(){
               var group= $("#group").val();
               var person=$("#person").val();
               var number=$("#car").val();
               var money=$("#money").val();



               if(group.trim()==""){
                   alert("小组必填")
                   return false;
               }else if(person.trim()==""){
                   alert("配送人必填")
                   return false;
               }else if(number.trim()==""){
                   alert("车号必填")
                   return false;
               }else if(money.trim()==""){
                   alert("预支费必填")
                   return false;
               }

               $("#form1").submit();


            }


